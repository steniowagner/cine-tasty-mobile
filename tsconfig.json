{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "types": ["react-native", "jest"],
    "module": "ES6",
    "moduleResolution": "Bundler",
    "jsx": "react-native",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"],
      "@styles/*": ["./styles/*"],
      "@app-types": ["./types/index.ts"],
      "@schema-types": ["./types/schema.ts"],
      "@hooks": ["./hooks/index.ts"],
      "@providers": ["./providers/index.ts"],
      "@common-components": ["./components/common/index.ts"],
      "@utils": ["./utils/index.ts"],
      "@navigation": ["./navigation/index.ts"],
      "@stacks": ["./components/stacks/index.ts"],
      "@i18n/*": ["./i18n/*"],
      "@mocks": ["../__mocks__/index.ts"]
    }
  }
}
